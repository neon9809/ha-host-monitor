# HA Host Monitor Configuration

home_assistant:
  # Report mode: "rest_api" or "mqtt"
  # - rest_api: Direct to Home Assistant API (default, simple)
  # - mqtt: Use MQTT Discovery (recommended for UI management)
  report_mode: "rest_api"

  # --- REST API Settings (only used if report_mode is "rest_api") ---
  url: "http://homeassistant.local:8123"
  token: "YOUR_LONG_LIVED_ACCESS_TOKEN"

# --- MQTT Settings (only used if report_mode is "mqtt") ---
mqtt:
  broker: "localhost"
  port: 1883
  username: ""
  password: ""
  discovery_prefix: "homeassistant"
  client_id: ""  # Auto-generated if empty

# --- General Settings ---

# Update frequency for all metrics (in seconds)
# This is a global fallback; each metric can have its own frequency
update_frequency: 60

# Host identifier for Home Assistant entities
# - "auto": Use the container hostname (recommended)
# - "your-custom-name": Use a custom name
host_identifier: "auto"

# --- Formatting Settings ---

formatting:
  # Unit for disk usage metrics (total, used, free)
  # Options: B, KB, MB, GB, TB
  disk_unit: "GB"

  # Unit for memory_available metric
  # Options: B, KB, MB, GB
  memory_unit: "GB"

  # Unit for network I/O metrics (bytes_sent, bytes_recv)
  # Options: B, KB, MB, GB
  network_unit: "MB"

  # Number of decimal places for float values (e.g., load average)
  decimal_places: 2

# --- Metrics Settings ---

metrics:
  # CPU Metrics
  cpu_percent:
    enabled: true
    frequency: 60
  cpu_count:
    enabled: true
    frequency: 300
  cpu_temp:
    enabled: false  # Disabled by default, may not work on all systems
    frequency: 60

  # Memory Metrics
  memory_percent:
    enabled: true
    frequency: 60
  memory_available:
    enabled: true
    frequency: 60

  # Disk Metrics
  disk_usage:
    enabled: true
    frequency: 300
    path: "/"  # Path to monitor

  # Network Metrics
  network_io:
    enabled: true
    frequency: 60

  # System Metrics
  load_average:
    enabled: true
    frequency: 60
  uptime:
    enabled: true
    frequency: 300
  boot_time:
    enabled: true
    frequency: 3600
  process_count:
    enabled: true
    frequency: 60
